{
  "properties": [
    {
      "name": "opa.authorization.datasource.jdbc.driverClassName",
      "type": "java.lang.String",
      "description": "The datasource JDBC driver class name",
      "defaultValue": "org.h2.Driver"
    },
    {
      "name": "opa.authorization.datasource.jdbc.username",
      "type": "java.lang.String",
      "description": "The datasource username",
      "defaultValue": "sa"
    },
    {
      "name": "opa.authorization.datasource.jdbc.password",
      "type": "java.lang.String",
      "description": "The datasource password",
      "defaultValue": ""
    },
    {
      "name": "opa.authorization.datasource.jdbc.url",
      "type": "java.lang.String",
      "description": "The datasource JDBC url",
      "defaultValue": "jdbc:h2:mem:db;DB_CLOSE_DELAY=-1"
    },
    {
      "name": "opa.authorization.datasource.hibernate.dialect",
      "type": "java.lang.String",
      "description": "The Hibernate Dialect to use",
      "defaultValue": "org.hibernate.dialect.H2Dialect"
    },
    {
      "name": "opa.authorization.datasource.hibernate.show_sql",
      "type": "java.lang.Boolean",
      "description": "Enable showing of sql query",
      "defaultValue": false
    },
    {
      "name": "opa.authorization.datasource.hibernate.cache.use_second_level_cache",
      "type": "java.lang.Boolean",
      "description": "Enable Hibernate second level caching",
      "defaultValue": true
    },
    {
      "name": "opa.authorization.datasource.hibernate.cache.use_query_cache",
      "type": "java.lang.Boolean",
      "description": "Enable Hibernate query caching",
      "defaultValue": true
    },
    {
      "name": "opa.authorization.datasource.hibernate.cache.region.factory_class",
      "type": "java.lang.String",
      "description": "The Hibernate cache region factory class to use for caching",
      "defaultValue": "org.hibernate.cache.ehcache.EhCacheRegionFactory"
    },
    {
      "name": "opa.authorization.datasource.hibernate.entities.package-name",
      "type": "java.lang.String",
      "description": "The package name of the entity classes"
    }
  ],
  "hints": [
    {
      "name": "spring.jmx.server",
      "providers": [
        {
          "name": "spring-bean-reference",
          "parameters": {
            "target": "javax.management.MBeanServer"
          }
        }
      ]
    }
  ]
}